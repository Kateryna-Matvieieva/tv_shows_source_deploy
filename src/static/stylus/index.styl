body 
  margin: 0;
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen",
    "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  padding: 2% 10%;
  background: url('../fon.jpg') repeat;
  line-height: 1.5

h1, h2
    text-align: center;

button 
    display: inline-block;
    border: solid 1px black;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    box-shadow: 0px 8px 8px rgba(0, 0, 0, 0.2)
    padding: 0.3rem;
    margin:5px;
    text-decoration: none;
    background:none;
    font-size: 1rem;
    cursor: pointer;
    text-align: center;
    transition: background 250ms ease-in-out, 
                transform 150ms ease;
    -webkit-appearance: none;
    -moz-appearance: none;


button:hover,
button:focus
    background: rgb(0, 136, 204);


button:active 
    transform: scale(0.99);

.submit-buttom
    background: rgb(0, 179, 179);
    border: none;

input
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    font-size: 1rem;
    padding: 0.3rem;
     
label
    margin: 0 5px;

.select-class 
    width: 30%;
    display: inline-block;
    
table
    border-collapse: collapse;

table, th, td
    border-bottom: solid 2px rgba(0, 179, 179, 0.85);
    
PageLink, PageForm 
    display: inline-block;

Header 
    background: rgba(190, 190, 190, 0.82);
    padding: 15px;
    margin-bottom: 15px;

.tv-table 
    background: rgba(225, 225, 225, 0.82);
    padding: 15px;
    margin-bottom: 15px

.no-data-container
    display: flex;
    flex-direction: row;
    justify-content: center;
    background: rgba(225, 225, 225, 0.80);
    padding: 10vh;

.page-container
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    padding-bottom: 15px; 

.filter-container, .sort-container
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-bottom: 15px;


